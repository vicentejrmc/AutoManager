<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Titulo - Automanager</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body class="d-flex flex-column min-vh-100">

    <!-- Barra superior -->
    <header class="navbar navbar-dark bg-primary shadow-sm">
        <div class="container-fluid">
            <span class="navbar-brand mb-0 h1">Automanager</span>
        </div>
    </header>

    <div class="d-flex flex-grow-1">
        <!-- Menu lateral -->
        <nav class="bg-dark text-white p-3" style="width:250px;">
            <ul class="nav flex-column">
                <li class="nav-item"><a class="nav-link text-white" asp-controller="Funcionario" asp-action="Index">Funcionários</a></li>
                <li class="nav-item"><a class="nav-link text-white" asp-controller="Automovel" asp-action="Index">Automóveis</a></li>
                <li class="nav-item"><a class="nav-link text-white" asp-controller="GrupoAutomovel" asp-action="Index">Grupo Automóvel</a></li>
                <li class="nav-item"><a class="nav-link text-white" asp-controller="Cliente" asp-action="Index">Clientes</a></li>
                <li class="nav-item"><a class="nav-link text-white" asp-controller="Condutor" asp-action="Index">Condutores</a></li>
                <li class="nav-item"><a class="nav-link text-white" asp-controller="TaxaServico" asp-action="Index">Taxas e Serviços</a></li>
                <li class="nav-item"><a class="nav-link text-white" asp-controller="Aluguel" asp-action="Index">Aluguéis</a></li>
                <li class="nav-item"><a class="nav-link text-white" asp-controller="Parceiro" asp-action="Index">Parceiros</a></li>
                <li class="nav-item"><a class="nav-link text-white" asp-controller="Cupom" asp-action="Index">Cupons</a></li>
            </ul>
        </nav>

        <!-- Conteúdo principal -->
        <main class="flex-grow-1 p-4 bg-light">
            @RenderBody()
        </main>
    </div>

    <!-- Rodapé -->
    <footer class="bg-light text-center border-top py-3 mt-auto">
        <small>&copy; @DateTime.Now.Year - Automanager</small>
    </footer>

    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
