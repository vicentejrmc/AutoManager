<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - AutoManager</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
</head>
<body class="d-flex flex-column min-vh-100">

    <!-- Barra superior -->
    <header class="navbar navbar-dark bg-primary shadow-sm">
        <div class="container-fluid">
            <span class="navbar-brand mb-0 h1">AutoManager</span>
        </div>
    </header>

    <div class="d-flex flex-grow-1">
        @if (User.IsInRole("Empresa"))
        {
            <!-- Sidebar -->
            <aside class="bg-dark text-white p-3 d-none d-md-block" style="width: 250px;">
                <h5 class="mb-4">Serviços</h5>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Empresa" asp-action="Empresa">
                            <i class="bi bi-car-front"></i> Veículos
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Funcionarios" asp-action="Funcionario">
                            <i class="bi bi-people"></i> Clientes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="GrupoVeiculos" asp-action="GrupoVeiculo">
                            <i class="bi bi-file-earmark-text"></i> Contratos
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Automoveis" asp-action="Automovel">
                            <i class="bi bi-cash-stack"></i> Financeiro
                        </a>
                    </li>
                </ul>
            </aside>
        }

        <!-- Conteúdo principal -->
        <main class="flex-grow-1 p-4 bg-light">
            @RenderBody()
        </main>
    </div>

    <!-- Rodapé -->
    <footer class="bg-light text-center border-top py-3 mt-auto">
        <small>&copy; @DateTime.Now.Year - AutoManager</small>
    </footer>

    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
